<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="LLPASSPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>servlets.User</class>
    <class>servlets.Configuration</class>
    <class>servlets.Dificulty</class>
    <class>servlets.Scoreboard</class>
    <class>model.Configuration</class>
    <class>model.Dificulty</class>
    <class>model.User</class>
    <class>model.Scoreboard</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/lunarlander?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.user" value="pacho"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="pacho"/>
    </properties>
  </persistence-unit>
</persistence>
